# ===========================================
# Docker Environment Configuration
# ===========================================
# Copy this file to .env in the project root before running docker-compose
# cp docker/env.docker.example .env

# Application Settings
APP_NAME="Web Booking"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8080

# Port Configuration
APP_PORT=8080
PHPMYADMIN_PORT=8081
MAILPIT_HTTP_PORT=8025
MAILPIT_SMTP_PORT=1025

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=web_booking
DB_USERNAME=web_booking
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootpassword

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Mail Configuration (for development with Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@webbooking.test"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe (Payment)
STRIPE_KEY=your_stripe_key
STRIPE_SECRET=your_stripe_secret

# VNPay (Vietnam Payment)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=${APP_URL}/payment/vnpay/callback

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# ===========================================
# After starting containers, generate APP_KEY:
# docker-compose exec app php artisan key:generate --show
# Then copy the output to APP_KEY above
# ===========================================

